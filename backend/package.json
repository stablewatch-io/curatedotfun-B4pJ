{
  "name": "@curatedotfun/backend",
  "version": "0.0.1",
  "scripts": {
    "build": "rspack build",
    "start": "node dist/main.js",
    "dev": "NODE_ENV=development concurrently --kill-others-on-fail \"rspack build --watch\" \"wait-on -d 500 dist/main.js && node scripts/dev-server.js\"",
    "test": "bun test",
    "clean": "rm -rf dist coverage .turbo",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:check": "drizzle-kit check",
    "db:studio": "drizzle-kit studio",
    "db:seed:dev": "bun ./scripts/seed-dev.ts",
    "db:seed:test": "bun ./test/setup/seed-test.ts",
    "db:migrate-sqlite-to-pg": "pnpm run ./scripts/migrate-sqlite-to-postgres.js"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@curatedotfun/types": "^0.0.5",
    "@module-federation/node": "^2.6.30",
    "@module-federation/runtime": "^0.11.1",
    "@rspack/binding": "1.2.8",
    "@rspack/cli": "1.2.8",
    "@rspack/core": "1.2.8",
    "axios": "^1.6.8",
    "concurrently": "^9.1.2",
    "drizzle-seed": "^0.3.1",
    "nock": "^13.5.4",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.2",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.2",
    "@hono/zod-openapi": "^0.9.5",
    "@hono/zod-validator": "^0.1.11",
    "@module-federation/runtime": "^0.11.1",
    "@notionhq/client": "^2.2.15",
    "@types/async-retry": "^1.4.9",
    "@types/lodash": "^4.17.16",
    "@types/pg": "^8.11.11",
    "agent-twitter-client": "^0.0.16",
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.40.1",
    "hono": "^4.0.5",
    "lodash": "^4.17.21",
    "ora": "^8.1.1",
    "pg": "^8.14.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "string-width": "^7.2.0"
  }
}
